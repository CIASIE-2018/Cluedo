{% for i in 0..24 %}
    <div id="ligne">
        {% for j in 0..24 %}
            {% if board.board[i][j] == "v" %}
                <button id="MyCustomButton" style="visibility: hidden">
                    <p style="visibility : hidden">{{ board.board[i][j] }}</p>
                </button>
            {% elseif board.board[i][j][1:] in ['1','2','3','4','5','6']  %}
                <button id="MyCustomButton" class="image_{{i}}_{{j}}" style="border: none;">
                    <p style="visibility : visible; color: #7FFF00;">
                        {{ board.board[i][j] }}
                    </p>
                </button>
            {% elseif "m" in board.board[i][j] %}
                <button id="MyCustomButton" class="image_{{i}}_{{j}}" style="border: none;">
                    <p style="visibility : hidden">
                        {{ board.board[i][j] }}
                    </p>
                </button>
            {% elseif board.board[i][j] == "A" or board.board[i][j] == "B" or board.board[i][j] == "C" or board.board[i][j] == "D" or board.board[i][j] == "E" or board.board[i][j] == "F" or board.board[i][j] == "G" or board.board[i][j] == "H" or board.board[i][j] == "I" %}
                <button id="MyCustomButton" class="image_{{i}}_{{j}}" style="border: solid 1px #7FFF00;">
                    <p style="visibility : hidden">
                        {{ board.board[i][j] }}
                    </p>
                </button>
            {% elseif board.board[i][j] == "J" or board.board[i][j] == "K" or board.board[i][j] == "L" or board.board[i][j] == "M" or board.board[i][j] == "N" or board.board[i][j] == "O" %}
                <button id="MyCustomButton" style="background-color: orange; border: none;">
                    <p style="visibility : hidden">
                        {{ board.board[i][j] }}
                    </p>
                </button>
            {% else %}
                <button id="MyCustomButton" style="background: radial-gradient(circle, #FFFFFF 40%, #EF3B36);">
                    <p style="visibility : hidden">
                        {{ board.board[i][j] }}
                    </p>
                </button>
            {% endif %}
        {% endfor %}
    </div>
{% endfor %}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
    $("button").click(function () {
        $(window).load(location.href + window);
    });
</script>