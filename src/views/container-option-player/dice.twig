<h1 class="titre">Dés</h1>
<h3 id="sum">
    0 : 0
</h3>

<div class="margin-top">
    <a href="#" style="height : 100%;">
        <button class="ui left labeled icon button" onclick="rollTheDice('{{MyUuiD}}')">
            <i class="right arrow icon"></i>
            Lancer les dés 
        </button>
    </a>
</div>

<script src="../socket.io/socket.io.js"></script>
<script>
    function rollTheDice(MyUuiD) {
        var socket = io.connect('http://localhost:8080');
        socket.on('connect', (data) => {
            socket.emit('rollTheDice', MyUuiD);
            socket.on("sum", sum => {
                $('#sum').empty().prepend(sum);
            });
        });
    }
</script>