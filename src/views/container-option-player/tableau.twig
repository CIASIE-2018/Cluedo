<div class="center">
    <div class="suspect">
        <h1 class="titre">Suspect</h1>
        {% for paque_carte_character in ListOfAllCards.pack %}
            {% if paque_carte_character.type == "character" %}
                <div class="ui checkbox">
                    <input type="checkbox">
                    <label id="label">{{ paque_carte_character.label }}</label>
                </div>
            </br>
        {% endif %}
    {% endfor %}
</div>

<div class="armes">
    <h1 class="titre">Armes</h1>
    {% for paque_carte_weapon in ListOfAllCards.pack %}
        {% if paque_carte_weapon.type == "weapon" %}
            <div class="ui checkbox">
                <input type="checkbox">
                <label id="label">{{ paque_carte_weapon.label }}</label>
            </div>
        </br>
    {% endif %}
{% endfor %}
</div>

<div class="lieux">
<h1 class="titre">Lieux</h1>
{% for paque_carte_room in ListOfAllCards.pack %}
    {% if paque_carte_room.type == "room" %}
        <div class="ui checkbox">
            <input type="checkbox">
            <label id="label">{{ paque_carte_room.label }}</label>
        </div>
    </br>
{% endif %}
{% endfor %}
</div>

<h1 class="titre">Notes</h1>
<div class="ui input notes">
<input placeholder="" type="text">
</div>
</div>